{
  "name": "react-transform-boilerplate",
  "version": "1.0.0",
  "description": "A new Webpack boilerplate with hot reloading React components, and error handling on module and component level.",
  "scripts": {
    "clean": "rimraf public",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --display-modules --display-reasons",
    "build:static": "node runMetalSmith && cp -r ./img/ public/",
    "build": "npm run build:webpack && npm run build:static",
    "start": "node devServer.js",
    "start:static": "cd public && http-server . -p 3000",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaearon/react-transform-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack",
    "babel",
    "react-transform"
  ],
  "author": "Dan Abramov <dan.abramov@me.com> (http://github.com/gaearon)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/gaearon/react-transform-boilerplate/issues"
  },
  "homepage": "https://github.com/gaearon/react-transform-boilerplate",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^5.0.4",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.11.3",
    "extract-text-webpack-plugin": "^0.9.1",
    "handlebars": "^4.0.5",
    "highlight.js": "^9.6.0",
    "json-loader": "^0.5.4",
    "koa": "^1.2.1",
    "koa-accesslog": "0.0.2",
    "koa-front-matter-views": "^2.0.6",
    "koa-route": "^2.4.2",
    "koa-sass": "^1.0.1",
    "koa-send": "^3.2.0",
    "koa-static": "^2.0.0",
    "koa-webpack-dev-middleware": "^1.2.2",
    "metalsmith": "^2.1.0",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-remarkable": "git+https://github.com/mulyoved/metalsmith-remarkable.git",
    "node-sass": "^3.7.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.4.3",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "tape": "^4.6.0",
    "webpack": "^1.13.2",
    "webpack-hot-middleware": "^2.12.2"
  },
  "dependencies": {
    "extract-text-webpack-plugin": "^1.0.1",
    "pure-flux": "^1.1.0",
    "pure-flux-router": "file:../../pure-flux-router",
    "react": "^15.3.2",
    "react-addons-pure-render-mixin": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-remarkable": "^1.1.1",
    "react-set-animate": "0.0.15"
  }
